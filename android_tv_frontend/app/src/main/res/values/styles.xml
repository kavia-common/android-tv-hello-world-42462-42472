<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV with Ocean Professional palette -->
    <!-- PUBLIC_INTERFACE: AppTheme is the main application theme applied in AndroidManifest.xml -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!-- Colors -->
        <item name="android:colorPrimary">@color/op_primary</item>
        <item name="android:colorAccent">@color/op_secondary</item>
        <item name="android:textColorPrimary">@color/op_text</item>
        <item name="android:textColorSecondary">@color/tv_secondary</item>

        <!-- Background: subtle gradient for modern-retro vibe -->
        <!-- References @drawable/bg_subtle_gradient which exists under res/drawable -->
        <item name="android:windowBackground">@drawable/bg_subtle_gradient</item>

        <!-- Typography: large readable -->
        <item name="android:textViewStyle">@style/AppTextView</item>

        <!-- Remove action bar for minimalist layout -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- PUBLIC_INTERFACE: AppTextView is the default TextView style used across the app -->
    <style name="AppTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/op_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:shadowColor">#20000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- PUBLIC_INTERFACE: FocusableRetro applies the retro glow background for focusable elements -->
    <!-- References @drawable/focus_glow_retro which exists under res/drawable -->
    <style name="FocusableRetro">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/focus_glow_retro</item>
    </style>
</resources>
