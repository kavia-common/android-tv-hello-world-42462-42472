<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_subtle_gradient"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="48dp"
    android:paddingBottom="48dp">

    <!-- Top Menu -->
    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:baselineAligned="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/menu_home"
            style="@style/AppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_home"
            android:textSize="24sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/focus_glow_retro"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/menu_login"
            style="@style/AppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_login"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/focus_glow_retro"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/menu_setting"
            style="@style/AppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_setting"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/focus_glow_retro"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/menu_my_plan"
            style="@style/AppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_my_plan"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/focus_glow_retro"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <!-- Hero Banner -->
    <ImageView
        android:id="@+id/hero_banner"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:contentDescription="@string/hero_banner_desc"
        android:scaleType="centerCrop"
        android:background="@drawable/focus_glow_retro"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/top_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Scrollable Rails Area -->
    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/hero_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/rails_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Trending -->
            <TextView
                android:id="@+id/label_trending"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_top_trending"
                android:textSize="26sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trending"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Continue Watching -->
            <TextView
                android:id="@+id/label_continue"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_continue_watching"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_continue"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Action -->
            <TextView
                android:id="@+id/label_action"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_action"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_action"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Drama -->
            <TextView
                android:id="@+id/label_drama"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_drama"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_drama"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Horror -->
            <TextView
                android:id="@+id/label_horror"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_horror"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_horror"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Others -->
            <TextView
                android:id="@+id/label_others"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_others"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_others"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:focusable="false"
                android:paddingBottom="8dp" />

            <!-- Available Subscriptions -->
            <TextView
                android:id="@+id/label_subscriptions"
                style="@style/AppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_available_subscriptions"
                android:textSize="26sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_subscriptions"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:focusable="false"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
